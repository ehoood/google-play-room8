<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/actionbar_bg"
    android:orientation="vertical" >

    <ImageButton
        android:id="@+id/sticky_addBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/pressed_style"
        android:src="@drawable/ic_5_content_new" />

    <ImageButton
        android:id="@+id/sticky_editBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="53dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/pressed_style"
        android:src="@drawable/ic_5_content_edit" />

     <ImageButton
         android:id="@+id/home_btn_sticky"
         android:layout_width="48dp"
         android:layout_height="48dp"
         android:layout_alignParentLeft="true"
         android:layout_alignParentTop="true"
        android:background="@drawable/pressed_style"
         android:src="@drawable/home_btn" />

</RelativeLayout>