<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/sticky_textview"
        android:layout_width="98dp"
        android:layout_height="90dp"
        android:background="@drawable/sticky_note"
        android:gravity="center" />

    <CheckBox
        android:id="@+id/sticky_checkBox_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:visibility="invisible"
        android:layout_marginLeft="65dp"/>

    <ImageView
        android:id="@+id/sticky_alert_pic"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignBottom="@+id/sticky_textview"
        android:layout_alignRight="@+id/sticky_textview"
        android:visibility="invisible"
        android:src="@drawable/alert" />

</RelativeLayout>