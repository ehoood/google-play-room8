<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/actionbar_bg"
    android:orientation="vertical" >

    <ImageButton
        android:id="@+id/sticky_deleteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/pressed_style"
        android:contentDescription="@string/delete"
        android:src="@drawable/ic_5_content_discard" />

    <ImageButton
        android:id="@+id/sticky_cancelEditBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/sticky_deleteBtn"
        android:layout_marginRight="14dp"
        android:layout_toLeftOf="@+id/sticky_deleteBtn"
        android:background="@drawable/pressed_style"
        android:contentDescription="@string/Cancel"
        android:src="@drawable/ic_cancel" />

</RelativeLayout>